{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "true"
            },
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Inspect",
            "url": "http://localhost:8081/__inspect/",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ],
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*",
                "/@fs/*": "${webRoot}/*",
                "/@vite/*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*"
            },
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-user-data"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug App",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*",
                "/@fs/*": "${webRoot}/*",
                "/@vite/*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*"
            },
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-user-data"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug:build"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "true"
            },
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Profile Build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug:profile"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": [
                "Debug Dev Server",
                "Debug Inspect",
                "Debug App"
            ],
            "preLaunchTask": "npm: debug:inspect",
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            },
            "stopAll": true
        }
    ]
}